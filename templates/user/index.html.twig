{% extends "base.html.twig" %}


{% block body %}

<table class="table">
    <thead>
        <tr>
            <th scope="row">#</th>
            <th scope="row">Nom</th>
            <th scope="row">Prénom</th>
            <th scope="row">Mail</th>
            <th scope="row">Actions</th>
        </tr>
    </thead>
    <tbody>
            {% if users is not empty %}
                {% for user in users %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.lastName}}</td>
                        <td>{{user.firstName}}</td>
                        <td>{{user.email}}</td>
                        <td>
                            <a href="{{ path('user_show', {id: user.id} ) }}" class="btn btn-primary">Détails</a>
                            <a href="{{ path('user_edit', {id: user.id} ) }}" class="btn btn-primary">Modifier</a>
                            <a href="{{ path('user_delete', {id: user.id} ) }}" class="btn btn-primary" onclick="return confirm('Voulez-vous supprimer cet utilisateur ?')">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                    <tr><td colspan="5">Aucun utilisateur</td></tr>                
            {% endif %}
    </tbody>
</table>

<a href="{{path('user_new')}}" class="btn btn-primary">Ajouter un utilisateur</a>
    
{% endblock %}