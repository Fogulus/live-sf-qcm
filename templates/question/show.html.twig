{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Libellé</th>
                <td>{{ question.libelle }}</td>
            </tr>
            <tr>
                <th>Réponse 1</th>
                <td>{{ question.reponse1 }}</td>
            </tr>
            <tr>
                <th>Réponse 2</th>
                <td>{{ question.reponse2 }}</td>
            </tr>
            <tr>
                <th>Réponse 3</th>
                <td>{{ question.reponse3 }}</td>
            </tr>
            <tr>
                <th>Réponse 4</th>
                <td>{{ question.reponse4 }}</td>
            </tr>
            <tr>
                <th>Réponse 5</th>
                <td>{{ question.reponse5 }}</td>
            </tr>
            <tr>
                <th>Point</th>
                <td>{{ question.point }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ question.image }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-success">Modifier</a>
        <a href="{{ path('app_question_index') }}" class="btn btn-primary">Retour à la liste</a>
    </div>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
